
GET     /foods                      controllers.application.FoodApplicationController.getAllFoods
DELETE  /foods/:id                  controllers.application.FoodApplicationController.deleteFood(id: Long)
GET     /food/:id                   controllers.application.FoodApplicationController.getFood(id: Long)
POST    /foods                      controllers.application.FoodApplicationController.addNewFood
PUT     /foods/:id                  controllers.application.FoodApplicationController.updateFood(id: Long)

GET     /api/foods                  controllers.endpoint.FoodApplicationEndpoint.getAllFoods
DELETE  /api/foods/:id              controllers.endpoint.FoodApplicationEndpoint.deleteFood(id: Long)
GET     /api/food/:id               controllers.endpoint.FoodApplicationEndpoint.getFood(id: Long)
POST    /api/foods                  controllers.endpoint.FoodApplicationEndpoint.addNewFood
PUT     /api/foods/:id              controllers.endpoint.FoodApplicationEndpoint.updateFood(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
